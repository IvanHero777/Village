<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_frame">

    <!-- ── Шапка ───────────────────────── -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#8DB74B"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_back_arrow"
            android:contentDescription="@string/cd_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Опросы и петиции"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_profile_circle"
            android:contentDescription="@string/cd_profile"/>
    </LinearLayout>

    <!-- ── Контент ─────────────────────── -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Заголовок -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Оценить качество работы электриков в СДК"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Картинка + описание -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:src="@drawable/image1"
                    android:scaleType="centerCrop"
                    android:background="@drawable/shape_round_white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Уважаемые соседи, уже месяц в нашем СДК работает новая электрокомпания ElectroSet. Тех, кто сталкивался с их работой, просим оценить по десятибалльной шкале."
                    android:textColor="#000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- ── Блок 1 ── -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Доброжелательность"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/lineKindness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="8dp">

                <!-- 10 кружков -->
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
            </LinearLayout>

            <!-- ── Блок 2 ── -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Эффективность проф. деятельности"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/lineEfficiency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="8dp">

                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
