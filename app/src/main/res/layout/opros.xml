<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_frame">

    <!-- ── Шапка ───────────────────────── -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8DB74B">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/jura_regular"
            android:text="Опросы и петиции"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_profile" />

    </FrameLayout>
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/ic_back_arrow"
        />
    <!-- ── Контент ─────────────────────── -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Заголовок -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Оценить качество работы электриков в СДК"
                android:textColor="#000"
                android:fontFamily="@font/jura_regular"
                android:textSize="22sp"
                android:gravity="center"
                />

            <!-- Картинка + описание -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:src="@drawable/image1"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/shape_round_white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jura_regular"
                    android:text="Уважаемые соседи, уже месяц в нашем СДК работает новая электрокомпания ElectroSet. Тех, кто сталкивался с их работой, просим оценить по десятибалльной шкале."
                    android:textColor="#000"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- ── Блок 1 ── -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Доброжелательность"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/jura_regular"/>

            <LinearLayout
                android:id="@+id/lineKindness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="8dp">

                <!-- 10 кружков -->
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
            </LinearLayout>

            <!-- ── Блок 2 ── -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Эффективность проф. деятельности"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/jura_regular"/>

            <LinearLayout
                android:id="@+id/lineEfficiency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="8dp">

                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
                <include layout="@layout/item_circle"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
