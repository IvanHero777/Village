<?xml version="1.0" encoding="utf-8"?>
<!-- activity_home.xml -->
<!-- Экран «Новости» без нижней навигационной панели -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_frame">

    <!-- ===== Шапка ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#A6B84B">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="Новости"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"/>
<!--            android:background="@drawable/ic_profile_circle"  &lt;!&ndash; vector аватар &ndash;&gt;-->

    </RelativeLayout>

    <!-- ===== Контент ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Поле поиска -->
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:drawable/edit_text"
                android:hint="Поиск"
                android:paddingHorizontal="12dp"
                android:drawableStart="@android:drawable/ic_menu_search" />

            <!-- Карусель новостей (ViewPager2 + dots) -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerTop"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:id="@+id/llDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="4dp" />

            <!-- Заголовок секции -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Последние новости"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Список новостей -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLatestNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
