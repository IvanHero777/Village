<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6EDAB">

    <!-- ─── Шапка ─────────────────────────────────────────────── -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#8DB74B"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Опросы и петиции"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnProfile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_profile_circle"
            android:contentDescription="@string/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ─── Контент прокручивается ───────────────────────────── -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="80dp">   <!-- место под нижнюю навигацию, если есть -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ═════════ Муниципальный опрос ═══════════════════ -->
            <TextView
                style="@style/SectionTitle"
                android:text="Опрос от муниципалитета"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="2dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/municipal_card"> <!-- #CAB955  в colors -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Заголовок темы -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Назначение председателя СДК в муниципалитете"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <!-- Даты -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="01.08.2025"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="30.08.2025"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Кандидаты 2×3 -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:columnCount="2"
                        android:columnOrderPreserved="false">

                        <RadioButton android:text="Блинчиков О.Н."/>
                        <RadioButton android:text="Путин В.В."/>
                        <RadioButton android:text="Хейный А.С."/>
                        <RadioButton android:text="Шабашников В.П."/>
                        <RadioButton android:text="Безруков Н.К."/>
                        <RadioButton android:text="Важный О.О."/>
                    </GridLayout>

                    <!-- Кнопка -->
                    <Button
                        android:id="@+id/btnVote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/btn_round_green"
                        android:backgroundTint="@null"
                        android:text="Проголосовать"/>

                    <!-- Примечание -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Внимание! Изменение голоса невозможно. Голосование доступно лицам от 18 лет."
                        android:textSize="10sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ═════════ Опросы/петиции от жильцов ══════════════ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    style="@style/SectionTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Опросы и петиции от жильцов"/>

                <ImageButton
                    android:id="@+id/btnAddPoll"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_circle_add"
                    android:contentDescription="@string/add"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPolls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
