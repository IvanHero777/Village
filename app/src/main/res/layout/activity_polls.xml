<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PollsActivity"
    android:background="#D6EDAB">

    <!-- ─── Шапка ─────────────────────────────────────────────── -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="#8DB74B">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/jura_regular"
            android:text="Опросы и петиции"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_profile" />

    </FrameLayout>

    <!-- ─── Контент прокручивается ───────────────────────────── -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="86dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="80dp">   <!-- место под нижнюю навигацию, если есть -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ═════════ Муниципальный опрос ═══════════════════ -->
            <TextView
                style="@style/SectionTitle"
                android:text="Опрос от муниципалитета"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jura_regular"
                android:textSize="26dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="2dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/municipal_card"> <!-- #CAB955  в colors -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Заголовок темы -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Назначение председателя СДК в муниципалитете"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:fontFamily="@font/jura_medium"
                        />

                    <!-- Даты -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="01.08.2025"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="30.08.2025"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Кандидаты 2×3 -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:columnCount="2"
                        android:columnOrderPreserved="false">

                        <RadioButton android:text="Блинчиков О.Н." android:fontFamily="@font/jura_regular" android:textSize="18dp"/>
                        <RadioButton android:text="Путин В.В." android:fontFamily="@font/jura_regular" android:textSize="18dp"/>
                        <RadioButton android:text="Хейный А.С." android:fontFamily="@font/jura_regular" android:textSize="18dp"/>
                        <RadioButton android:text="Шабашников В.П." android:fontFamily="@font/jura_regular" android:textSize="18dp"/>
                        <RadioButton android:text="Безруков Н.К." android:fontFamily="@font/jura_regular" android:textSize="18dp"/>
                        <RadioButton android:text="Важный О.О." android:fontFamily="@font/jura_regular" android:textSize="18dp"/>
                    </GridLayout>

                    <!-- Кнопка -->
                    <Button
                        android:id="@+id/btnVote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        style="@style/GreenButton"
                        android:text="Проголосовать"
                        android:textColor="#000"/>

                    <!-- Примечание -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Внимание! Изменение голоса невозможно. Голосование доступно лицам от 18 лет."
                        android:textSize="10sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ═════════ Опросы/петиции от жильцов ══════════════ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    style="@style/SectionTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Опросы и петиции от жильцов"
                    android:textSize="21sp"
                    android:fontFamily="@font/jura_bold" />

                <ImageButton
                    android:id="@+id/btnAddPoll"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/addbtn"
                    android:contentDescription="@string/add"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llUserPolls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Карточка опроса 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/news1_thumb"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape_circle_mask" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05 июня 2025 – 05 июля 2025"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Опрос: Оценить качество работы электриков в СДК"
                            android:textSize="18sp"
                            android:fontFamily="@font/jura_bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Карточка опроса 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/news2_thumb"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape_circle_mask" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 июня 2025 – 10 сентября 2025"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Петиция: Сбор подписей на открытие новой школы"
                            android:textSize="18sp"
                            android:fontFamily="@font/jura_bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Карточка опроса 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/news3_thumb"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape_circle_mask" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05 июня 2025 – 05 июля 2025"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Опрос: Оценить качество работы сантехников в СДК"
                            android:textSize="18sp"
                            android:fontFamily="@font/jura_bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- Нижнее меню -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82.4dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >
        <android.widget.ImageButton
            android:layout_width="82.4dp"
            android:id="@+id/btnNews"
            android:layout_height="match_parent"
            android:src="@drawable/ic_news"
            android:background="@drawable/shape_inactive_basement_btn">
        </android.widget.ImageButton>
        <android.widget.ImageButton
            android:layout_width="82.4dp"
            android:id="@+id/btnAdvert"
            android:layout_height="match_parent"
            android:src="@drawable/ic_megaphone"
            android:background="@drawable/shape_inactive_basement_btn">
        </android.widget.ImageButton>
        <android.widget.ImageButton
            android:layout_width="82.4dp"
            android:id="@+id/btnService"
            android:layout_height="match_parent"
            android:src="@drawable/ic_service"
            android:background="@drawable/shape_inactive_basement_btn">
        </android.widget.ImageButton>
        <android.widget.ImageButton
            android:layout_width="82.4dp"
            android:id="@+id/btnPolls"
            android:layout_height="match_parent"
            android:src="@drawable/ic_graph"
            android:background="@drawable/shape_active_basement_btn">
        </android.widget.ImageButton>
        <android.widget.ImageButton
            android:layout_width="82.4dp"
            android:id="@+id/btnMarket"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cart"
            android:background="@drawable/shape_inactive_basement_btn">
        </android.widget.ImageButton>
    </LinearLayout>

</FrameLayout>