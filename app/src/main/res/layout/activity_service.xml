<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceActivity"
    android:background="#D6EDAB">

    <!-- Заголовок -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="#8DB74B">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/jura_regular"
            android:text="Вызов службы"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_profile" />

    </FrameLayout>

    <!-- Сетка кнопок (6 штук) -->
    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="15dp"
        android:layout_gravity="top"
        android:useDefaultMargins="true"
        >
        <!-- 6 кнопок -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/shape_round"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Иконка сверху -->
                <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_service1" />

                <!-- Текст снизу -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Услуги электрика"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jura_medium"
                    android:textSize="14sp" />
            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/shape_round"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Иконка сверху -->
                <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_service2" />

                <!-- Текст снизу -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Услуги сантехника"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jura_medium"
                    android:textSize="14sp" />
            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/shape_round"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Иконка сверху -->
                <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_service3" />

                <!-- Текст снизу -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Услуги врача на дом"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jura_medium"
                    android:textSize="14sp" />
            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/shape_round"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Иконка сверху -->
                <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_service4" />

                <!-- Текст снизу -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Вызов мусора"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jura_medium"
                    android:textSize="15sp"/>
            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/shape_round"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Иконка сверху -->
                <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_service5" />

                <!-- Текст снизу -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Услуги клинига"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jura_medium"
                    android:textSize="14sp"/>
            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/shape_round"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Иконка сверху -->
                <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_service6" />

                <!-- Текст снизу -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Вывоз полиции"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jura_medium"
                    android:textSize="14sp"/>
            </LinearLayout>

        </FrameLayout>

    </GridLayout>

    <!-- Седьмая кнопка — техническая поддержка -->
    <Button
        android:id="@+id/support_button"
        android:layout_width="wrap_content"
        style="@style/GreenButton2"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="440dp"
        android:text="Техническая поддержка"
        android:drawableLeft="@android:drawable/ic_menu_manage"
        android:background="@drawable/shape_round"
        android:fontFamily="@font/jura_medium"
        android:padding="17dp"/>

    <!-- Нижнее меню -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82.4dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >
        <android.widget.ImageButton
            android:layout_width="82.4dp"
            android:id="@+id/btnNews"
            android:layout_height="match_parent"
            android:src="@drawable/ic_news"
            android:background="@drawable/shape_inactive_basement_btn">
        </android.widget.ImageButton>
        <android.widget.ImageButton
            android:layout_width="82.4dp"
            android:id="@+id/btnAdvert"
            android:layout_height="match_parent"
            android:src="@drawable/ic_megaphone"
            android:background="@drawable/shape_inactive_basement_btn">
        </android.widget.ImageButton>
        <android.widget.ImageButton
            android:layout_width="82.4dp"
            android:id="@+id/btnService"
            android:layout_height="match_parent"
            android:src="@drawable/ic_service"
            android:background="@drawable/shape_active_basement_btn">
        </android.widget.ImageButton>
        <android.widget.ImageButton
            android:layout_width="82.4dp"
            android:id="@+id/btnPolls"
            android:layout_height="match_parent"
            android:src="@drawable/ic_graph"
            android:background="@drawable/shape_inactive_basement_btn">
        </android.widget.ImageButton>
        <android.widget.ImageButton
            android:layout_width="82.4dp"
            android:id="@+id/btnMarket"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cart"
            android:background="@drawable/shape_inactive_basement_btn">
        </android.widget.ImageButton>
    </LinearLayout>

</FrameLayout>