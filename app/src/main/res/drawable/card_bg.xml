<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон карточки: светло-зеленый -->
    <solid android:color="#8DB74B"/>
    <!-- Скругленные углы -->
    <corners android:radius="10dp"/>
    <!-- Тонкая рамка для отделения -->
    <stroke
        android:width="1dp"
        android:color="#C0D8A1"/>
    <!-- Внутренние отступы -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
